@model StudentsMVC.Models.Student

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<SelectListItem> ListOfClassroomsName = new List<SelectListItem>();
    foreach (var classroom in MvcApplication.classroomList)
    {
        ListOfClassroomsName.Add(new SelectListItem
        {
            Text = classroom.Name,
            Value = classroom.Name

        });
    }

    List<SelectListItem> ListOfClassroomsNumber = new List<SelectListItem>();
    foreach (var classroom in MvcApplication.classroomList)
    {
        ListOfClassroomsNumber.Add(new SelectListItem
        {
            Text = classroom.Number,
            Value = classroom.Number

        });
    }

    List<SelectListItem> ListOfAddressesStreet = new List<SelectListItem>();
    foreach (var address in MvcApplication.addressList)
    {
        ListOfAddressesStreet.Add(new SelectListItem
        {
            Text = address.Street,
            Value = address.Street

        });
    }

    List<SelectListItem> ListOfAddressesCity = new List<SelectListItem>();
    foreach (var address in MvcApplication.addressList)
    {
        ListOfAddressesCity.Add(new SelectListItem
        {
            Text = address.City,
            Value = address.City

        });
    }

    List<SelectListItem> ListOfAddressesPostalCode = new List<SelectListItem>();
    foreach (var address in MvcApplication.addressList)
    {
        ListOfAddressesPostalCode.Add(new SelectListItem
        {
            Text = address.PostalCode,
            Value = address.PostalCode

        });
    }
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Student</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.StudentName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.StudentName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.StudentName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Age, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.StudentClassroom.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.StudentClassroom.Name, ListOfClassroomsName, "-- Select Status --", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.StudentClassroom.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.StudentClassroom.Number, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.StudentClassroom.Number, ListOfClassroomsNumber, "-- Select Status --", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.StudentClassroom.Number, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.StudentAddress.Street, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.StudentAddress.Street, ListOfAddressesStreet, "-- Select Status --", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.StudentAddress.Street, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.StudentAddress.City, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.StudentAddress.City, ListOfAddressesCity, "-- Select Status --", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.StudentAddress.City, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.StudentAddress.PostalCode, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.StudentAddress.PostalCode, ListOfAddressesPostalCode, "-- Select Status --", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.StudentAddress.PostalCode, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

