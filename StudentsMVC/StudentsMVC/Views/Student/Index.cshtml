@model IEnumerable<StudentsMVC.Models.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StudentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentClassroom.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentClassroom.Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentAddress.Street)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentAddress.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentAddress.PostalCode)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StudentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentClassroom.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentClassroom.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentAddress.Street)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentAddress.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentAddress.PostalCode)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
